@implements IDisposable

@inject NavigationManager NavigationManager

<div onclick="document.querySelector('.navbar-toggle').click()">
    <nav class="navbar navbar-expand-lg bg-secondary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">GameCatcher</a>
            <div class="mx-auto">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 search-bar" type="search" placeholder="Search"
                        aria-label="Search" />
                </form>
            </div>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex">
                        <a class="btn" href="Account/Manage">@context.User.Identity?.Name</a>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="btn btn-danger ms-2">Logout</button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex">
                        <a class="btn btn-primary" href="Account/Register" role="button">Register</a>
                        <a class="btn btn-success ms-2" href="Account/Login" role="button">Login</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

