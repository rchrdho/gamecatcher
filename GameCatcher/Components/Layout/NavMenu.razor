@implements IDisposable

@inject NavigationManager NavigationManager

@rendermode InteractiveServer

<div onclick="document.querySelector('.navbar-toggle').click()">
    <nav class="navbar navbar-expand-lg mb-4">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/">GameCatcher</a>
            <div class="mx-auto">
                <div class="d-flex" role="search" @onclick:stopPropagation="true">
                    <input @bind="searchTerm" @bind:event="oninput" @onkeypress="HandleSearchKeyPress"
                           class="form-control me-2 search-bar" type="search" placeholder="Search"
                           aria-label="Search" />
                    <button @onclick="HandleSearch" class="btn btn-outline-light" type="button">
                        Search
                    </button>
                </div>
            </div>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center">
                        <a class="btn text-white" href="Account/Manage">@context.User.Identity?.Name</a>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="btn btn-danger ms-2">Logout</button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex">
                        <a class="btn btn-primary" href="Account/Register" role="button">Register</a>
                        <a class="btn btn-success ms-2" href="Account/Login" role="button">Login</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;
    private string searchTerm = string.Empty;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            HandleSearch();
        }
    }

    private void HandleSearch()
    {
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var url = $"/search?q={Uri.EscapeDataString(searchTerm.Trim())}";
            NavigationManager.NavigateTo(url);
            searchTerm = string.Empty; // Clear search after navigation
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

